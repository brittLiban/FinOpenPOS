# Production Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =======================
# SUPABASE CONFIGURATION
# =======================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =======================
# STRIPE CONFIGURATION
# =======================
STRIPE_SECRET_KEY=sk_live_or_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret
STRIPE_PUBLISHABLE_KEY=pk_live_or_test_your_publishable_key

# =======================
# APPLICATION SETTINGS
# =======================
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NODE_ENV=production

# =======================
# BUSINESS INFORMATION
# =======================
NEXT_PUBLIC_BUSINESS_NAME=FinOpenPOS
NEXT_PUBLIC_BUSINESS_ADDRESS=123 Business Street, City, State 12345
NEXT_PUBLIC_BUSINESS_PHONE=(555) 123-4567
NEXT_PUBLIC_BUSINESS_EMAIL=support@yourdomain.com

# =======================
# SECURITY SETTINGS
# =======================
NEXTAUTH_SECRET=your_32_character_random_string_for_jwt_signing
NEXTAUTH_URL=https://yourdomain.com

# =======================
# OPTIONAL: EMAIL SETTINGS (for notifications)
# =======================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# =======================
# DEVELOPMENT ONLY
# =======================
# For local development, use these instead:
# NEXT_PUBLIC_SITE_URL=http://localhost:3000
# NODE_ENV=development
